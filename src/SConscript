Import('env')

vala_sources = """
	client.vala
	collections_tree.vala
	config.vala
	filter_tree.vala
	main_hpaned.vala
	main_window.vala
	menubar.vala
	playlist_tree.vala
	right_hpaned.vala
	toolbar.vala
	abraca.vala
	server_browser.vala
	dragdroptarget.vala
""".split()

sources = env.Vala(vala_sources)
prog = env.Program('abraca', sources + ['utils/playlist_map.c'])

env.Append(CPPPATH = ['utils'])

env.Alias('install', env.Install('$prefix/bin', prog))
